<div class="container mt-5 col-8">

  <div class="form-group mb-5 row justify-content-start">
    <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"
      style='vertical-align:middle'>*必填欄位</label>
    <div class="col-sm-6">
      <h3 style='display:inline;vertical-align:middle'>請輸入你的支出</h3>
    </div>
  </div>

  <form action="/record" method="POST">
    <div class="form-group row mb-3">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">名稱* :</label>
      <div class="col-sm-6">
        <input type="text" class="form-control form-control-lg" id="name" name='name' required>
      </div>
    </div>

    <div class="form-group row mb-3">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">日期* :</label>
      <div class="col-sm-6">
        <input type="date" class="form-control form-control-lg" id="date" name="date" required>
      </div>
    </div>

    <div class="form-group row mb-3">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">類別* :</label>
      <div class="col-sm-6">
        <select id="category" class="form-control form-control-lg" name='category' required>
          <option selected>請選擇類別...</option>
          <option value='1'>家居物業</option>
          <option value='2'>交通出行</option>
          <option value='3'>休閒娛樂</option>
          <option value='4'>餐飲食品</option>
          <option value='5'>其他</option>
        </select>
      </div>
    </div>

    <div class="form-group row mb-5">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg">金額* :</label>
      <div class="col-sm-6">
        <input type="number" class="form-control form-control-lg" id="amount" name='amount' required>
      </div>
    </div>

    <div class="text-center">
      <button class='btn btn-primary btn-lg' type="submit">新增支出</button>
    </div>
  </form>
</div>

